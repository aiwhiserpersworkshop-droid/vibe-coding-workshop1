generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id          String   @id @default(cuid())
  title       String
  description String?
  content     String   @db.Text
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id         String    @id @default(uuid())
  externalId String    @unique
  data       Json?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  messages   Message[]

  @@index([externalId])
}

model Conversation {
  id         String    @id @default(uuid())
  externalId String    @unique
  data       Json?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  messages   Message[]

  @@index([externalId])
}

model Message {
  id                     String       @id @default(uuid())
  conversationExternalId String
  contactExternalId      String
  text                   String       @db.Text
  data                   Json?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  conversation           Conversation @relation(fields: [conversationExternalId], references: [externalId])
  contact                Contact      @relation(fields: [contactExternalId], references: [externalId])

  @@index([conversationExternalId])
  @@index([contactExternalId])
}
